{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "sourceMap": true,
    "rootDir": ".",
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".vscode-test", "docs", "vscode-kubernetes-tools", "javascript" ,"spec_example", "topoViewerEditor"]
}